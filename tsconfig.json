{
  "compilerOptions": {
    "target": "es2023",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "Node18",
    "rootDir": "./",
    "moduleResolution": "node16",
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "declaration": true,
    "noImplicitAny": false
  }
}
